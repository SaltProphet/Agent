{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://agent.local/schemas/capability-descriptor.schema.json",
  "title": "CapabilityDescriptor",
  "type": "object",
  "required": ["provider", "model", "features", "limits"],
  "properties": {
    "provider": { "type": "string" },
    "model": { "type": "string" },
    "features": {
      "type": "object",
      "required": ["toolCalling", "jsonMode", "vision", "streaming"],
      "properties": {
        "toolCalling": { "type": "boolean" },
        "jsonMode": { "type": "boolean" },
        "vision": { "type": "boolean" },
        "streaming": { "type": "boolean" }
      },
      "additionalProperties": false
    },
    "limits": {
      "type": "object",
      "required": ["maxInputTokens", "maxOutputTokens"],
      "properties": {
        "maxInputTokens": { "type": "integer", "minimum": 1 },
        "maxOutputTokens": { "type": "integer", "minimum": 1 },
        "maxTools": { "type": "integer", "minimum": 0 },
        "maxContextMessages": { "type": "integer", "minimum": 1 }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
